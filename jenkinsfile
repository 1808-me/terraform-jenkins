pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
    }

    stages {
        stage('Checkout Terraform Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/1808-me/terraform-jenkins.git'
            }
        }

        stage('Terraform Init') {
            steps {
                bat 'terraform init'
            }
        }

        stage('Terraform Plan') {
            steps {
                bat 'terraform plan -out=tfplan.txt'
            }
        }

        stage('Approve Infrastructure Deployment') {
            steps {
                input message: 'Do you want to deploy the infrastructure?'
            }
        }

        stage('Terraform Apply') {
            steps {
                bat 'terraform apply tfplan.txt'
            }
        }
    }

    post {
        always {
            echo 'Terraform pipeline finished'
        }
    }
}
